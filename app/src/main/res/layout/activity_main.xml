<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/ivPvp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/tvPvp"
        app:layout_constraintEnd_toEndOf="@+id/tvPvp"
        app:layout_constraintStart_toStartOf="@+id/tvPvp"
        app:srcCompat="@drawable/ic_landing_page1" />

    <ImageView
        android:id="@+id/ivVscom"
        android:layout_width="231dp"
        android:layout_height="184dp"
        app:layout_constraintEnd_toEndOf="@+id/tvPvp"
        app:layout_constraintStart_toStartOf="@+id/tvPvp"
        app:layout_constraintTop_toBottomOf="@+id/tvPvp"
        app:srcCompat="@drawable/ic_landing_page2" />

    <TextView
        android:id="@+id/tvPvp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="80dp"
        android:fontFamily="@font/comic_relief"
        android:text="TextView"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvVscom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/comic_relief"
        android:text="TextView"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/ivVscom"
        app:layout_constraintStart_toStartOf="@+id/ivVscom"
        app:layout_constraintTop_toBottomOf="@+id/ivVscom" />

    <TextView
        android:id="@+id/tvKeluar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Keluar"
        android:clickable="true"
        android:layout_marginBottom="20dp"
        android:textColor="#1E88E5"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ivVscom" />

</androidx.constraintlayout.widget.ConstraintLayout>